{
  "name": "express-typescript-auth",
  "version": "0.0.1",
  "description": "A starting point for Node.js express auth api with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/ashhitch/ts-node-express-auth-api"
  },
  "author": "Ash Hitchcock",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-mongo": "^2.0.0",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "es6-promisify": "^6.0.1",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "html-to-text": "^4.0.0",
    "jsonwebtoken": "^8.4.0",
    "juice": "^5.1.0",
    "lodash": "^4.17.5",
    "lusca": "^1.5.2",
    "md5": "^2.2.1",
    "mongoose": "^4.13.11",
    "mongoose-mongodb-errors": "^0.0.2",
    "nodemailer": "^4.7.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "pug": "^2.0.0-rc.4",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "validator": "^10.9.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/connect-mongo": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/es6-promisify": "^6.0.0",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/html-to-text": "^1.4.31",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/md5": "^2.1.33",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^4.7.34",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^0.4.3",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.32",
    "@types/passport-local-mongoose": "^4.0.12",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.47.0",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^9.4.4",
    "@types/winston": "^2.3.7",
    "concurrently": "^3.5.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.0",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
