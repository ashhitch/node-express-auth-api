{
  "name": "express-typescript-auth",
  "version": "0.0.1",
  "description": "A starting point for Node.js express auth api with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/ashhitch/ts-node-express-auth-api"
  },
  "author": "Ash Hitchcock",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.6.1",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-mongo": "^2.0.3",
    "connect-roles": "^3.1.2",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "es6-promisify": "^6.0.1",
    "express": "^4.16.4",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "html-to-text": "^4.0.0",
    "jsonwebtoken": "^8.4.0",
    "juice": "^5.1.0",
    "lodash": "^4.17.11",
    "lusca": "^1.6.1",
    "md5": "^2.2.1",
    "mongoose": "^5.4.0",
    "mongoose-mongodb-errors": "^0.0.2",
    "nodemailer": "^4.7.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "pug": "^2.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "validator": "^10.10.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.50",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/connect-mongo": "^0.0.40",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/es6-promisify": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.8",
    "@types/html-to-text": "^1.4.31",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.119",
    "@types/lusca": "^1.5.0",
    "@types/md5": "^2.1.33",
    "@types/mongodb": "^3.1.17",
    "@types/mongoose": "^5.3.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^0.4.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/passport-local-mongoose": "^4.0.12",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.8.1",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.9.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "node-sass": "^7.0.0",
    "nodemon": "^1.18.9",
    "shelljs": "^0.8.3",
    "supertest": "^3.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
